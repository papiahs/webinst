<%= form_for(@art) do |f| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>

      <ul>
      <% @art.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo, :size=>131 %>
  </div>
  <div class="field">
    <%= f.label :resumen %><br />
    <%= f.text_area :resumen, :cols=>100, :rows=>5 %>
  </div>
  
  <div class="field"> 
		<p><label for="blog_content">Content</label><br/>
		<%= f.text_area :contenido, :cols => "100", :class=>"mceEditor"%></p>
  </div>
<div class="field">
    <%= f.label :autor%><br />
   <select id="autors" name="art[autor_ids][]" multiple="multiple" size="10" style="width: 250px;">
		<%= options_from_collection_for_select(Autor.find(:all), :id, :nombre, @art.autors.collect { |u| u.id}) %>
	</select>
	<br />                                    
  </div>
  
  <div class="field">
    <%= f.label :ref,"Referencias Bibliografias"%><br />
   <select id="refs" name="art[ref_ids][]" multiple="multiple" size="10" style="width: 250px;">
		<%= options_from_collection_for_select(Ref.find(:all), :id, :titulo, @art.refs.collect { |u| u.id}) %>
	</select>
	<br />                                    
  </div>
 
  
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
